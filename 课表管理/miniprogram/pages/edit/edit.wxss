.picker-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 200px;
}

.picker-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 5px;
}

.picker {
  width: 100%;
  height: 100%;
}

.picker-item {
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #999;
}

.picker-item.selected {
  color: #1e8aef;
  font-weight: bold;
}

.picker-item.disabled {
  color: #eee;
}

.time-picker-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
}

