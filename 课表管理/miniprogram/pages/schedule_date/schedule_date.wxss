/* 选择框样式 */
.select-menu {
  position: fixed;
  display: none;
  z-index: 1000;
}

.select-menu.show {
  display: block;
}

.menu-content {
   
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding: 16rpx 0;
  width: 240rpx;
}


/* 清除 button 默认样式，继承 .menu-item 样式 */
.menu-content button.menu-item {
  /* 清除默认背景、边框 */
  background-color: transparent;
  border: none;
  /* 清除默认内边距，使用 .menu-item 的 padding */
  padding: 0; 
  margin: 0;
  /* 让 button 宽高自适应内容，或继承父元素宽度 */
  width: 100%;
  /* 继承文字样式 */
  font-size: 28rpx;
  font-weight:700;
  color: #333;
  text-align: center;
  /* 重新设置内边距，与原 .menu-item 一致 */
  padding: 12rpx 0; 
  /* 处理边框，与原 .menu-item 一致 */
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box; /* 确保内边距和边框不影响宽度计算 */
}
.menu-item:last-child {
  border-bottom: none;
}
/* 最后一个 button 移除底部边框，与原逻辑一致 */
.menu-content button.menu-item:last-child {
  border-bottom: none;
}

/* 日课表整体样式 */
.daily-schedule {
  margin-top: 20rpx;
}

/* 每节课的容器 */
.schedule-item {
  display: flex;
  margin-bottom: 10rpx;
  height: 100rpx;
}

/* 时间信息部分 */
.time-info {
  width: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #eee;
}

.section-number {
  font-weight: bold;
  font-size: 28rpx;
}

.time-text {
  font-size: 24rpx;
  color: #888;
}

/* 课程内容部分 */
.course-container {
  flex: 1;
  position: relative;
}

/* 课程卡片样式 */
.course-card {
  position: absolute;
  top: 2rpx;
  left: 2rpx;
  right: 2rpx;
  bottom: 2rpx;
  border-radius: 8rpx;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  justify-content: center;  /* 垂直居中 */
}

.course-name {
  font-weight: bold;
  font-size: 32rpx;
}

.course-teacher,
.course-location {
  margin-top: 4rpx;
  font-size: 30rpx;
  opacity: 0.9;
}

/* 被占用的课程格子 */
.occupied-slot {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: transparent;
}
.course-card:active {
  transform: scale(0.98);
}


.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.popup-container {
  background-color: white;
  border-radius: 12px;
  width: 80%;
  max-width: 300px;
  padding: 20px;
}

.popup-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
  text-align: center;
}

.popup-content {
  font-size: 14px;
  margin-bottom: 20px;
}

.popup-content text {
  display: block;
  margin-bottom: 5px;
}

.popup-confirm {
  background-color: #07C160;
  color: white;
  border-radius: 8px;
  padding: 10px;
  text-align: center;
}