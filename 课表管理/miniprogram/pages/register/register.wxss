/* 基础样式：移除navigator默认点击效果 */
navigator {
  display: inline;
}

navigator::after {
  display: none;
}

/* 登录文字原始样式 */
.text_2 {
  color: #a6a6a6; /* 浅灰色文字 */
  font-weight: 700;
  letter-spacing: 4rpx;
}

/* 登录文字点击动画 */
.login-animation {
  transition: all 0.3s ease; /* 过渡动画 */
}

.login-animation:active {
  transform: scale(1.5); /* 放大% */
  color: #000000; /* 变为黑色 */
}
.page button.text-wrapper {
  /* 清除 button 默认背景、边框等 */
  background: transparent;
  padding: 0;
  margin: 1;
  border: none;
  /* 继承原 view 的样式逻辑 */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  align-self: stretch;
  margin-top: 32rpx; 
  padding: 33.12rpx 0 29.26rpx;
  border-radius: 50rpx;
  border: solid 2rpx #1e8aef;
  width: 100%;
}
/* 处理按钮点击时的默认高亮（按需，若想完全一致可加） */
.page button.text-wrapper::after {
  display: none;
}
button.text-wrapper:active {
  background-color: #f0f0f0; 
  /* 可同时调整其他样式，比如边框颜色等 */
}
