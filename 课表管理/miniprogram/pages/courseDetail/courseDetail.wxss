.page {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background-color: #f0f0f0;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.title {
  font-size: 36rpx;
  margin-left: 20rpx;
  font-weight: bold;
}

.card {
  background-color: #fff;
  margin: 30rpx;
  border-radius: 16rpx;
  padding: 40rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.edit-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.info-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.info-text {
  font-size: 32rpx;
  color: #333;
}